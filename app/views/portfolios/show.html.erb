<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio.main_image, 'thumb'), width: '100%' %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio.title %></h1>

      <hr>

      <em><%= @portfolio.subtitle %></em>

      <p><%= @portfolio.body %></p>

      <hr>

      <h3>Technologies Used:</h3>

      <% @portfolio.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>
